<script type="text/javascript">
  (function() {
    setTimeout(function() {
      // Select all FAQ items
      const faqItems = document.querySelectorAll('.faq-item');
      console.log("FAQ Items:", faqItems.length);
      
      // Add click event to each question
      faqItems.forEach(item => {
        let question = item.querySelector('.faq-question');
        let answer = item.querySelector('.faq-answer');
        
        // Initially hide all answers
        if (answer) {
          answer.style.display = 'none';
          console.log("Hiding answer initially:", answer.innerText);
        }
      });
      
      const faqQuestions = document.querySelectorAll('.faq-question');
      faqQuestions.forEach(question => {
        question.addEventListener('click', function() {
          console.log("Question clicked:", this.innerText);

          let item = this.closest('.faq-item');
          faqItems.forEach(otherItem => {
            let otherAnswer = otherItem.querySelector('.faq-answer');
            let otherToggle = otherItem.querySelector('.faq-toggle');
            if (otherItem !== item || otherAnswer.style.display === 'block') {
              // Close all other answers
              console.log("Close answer:", otherAnswer.innerText);
              if (otherAnswer) otherAnswer.style.display = 'none';
              if (otherToggle) otherToggle.textContent = '‚ñº';
            } else {
              console.log("Showing answer:", otherAnswer.innerText);
              if (otherAnswer) otherAnswer.style.display = 'block';
              if (otherToggle) otherToggle.textContent = '‚ñ≤';
            }
          });
        });
      });

      console.log("FAQ script initialized");
    }, 1000);
  })();
</script>
